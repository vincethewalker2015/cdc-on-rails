<%= form_for Contact.new do |f| %>
  <!-- ERRORS WILL GO HERE -->

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name, class: "white" %><br />
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>
    </div>
  
    <div class="col-md-6">
     <div class="form-group">
        <%= f.label :email, class: "white" %><br />
        <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
      </div>
  </div>

  <div class="field">
    <%= f.label :message, class: "white" %><br />
    <%= f.text_area :message, class: "form-control", rows: "4", placeholder: "Message" %>
  </div>
  <div class="actions">
    <%= f.submit "Send", class: "btn btn-default btn-lg"%>
  </div>
  </div>
<% end %>