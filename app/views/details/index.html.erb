<div class="container">
     <div class="row">
    <%= render 'layouts/flash' %>
    <h2 class="center" class="">Edit Company Details</h2>
    <div class="pages">
        <div class="center">
            <p><%= link_to "Create New Profile", new_detail_path, class: "btn btn-primary" %></p>
           <% @details.each do |detail| %>
               <div class="center">
                   <h3><%= detail.employee_name %></h3>
                   <p><%= image_tag detail.picture.url if detail.picture?  %></p>
                   <p><%= detail.description %></p><br />
                   <p><%= link_to "What the world sees", root_path, class: "btn btn-success" %>
                      <%= link_to "Edit", edit_detail_path(detail), class: "btn btn-warning" %>
                      <%= link_to "View", detail_path(detail), class: "btn btn-primary"  %>
                      <%= link_to "Delete", detail_path(detail), method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-danger" %>
                  </p>
                  <br />
                 </div>
             <% end %>
         </div>
    </div>
     </div>
</div>
