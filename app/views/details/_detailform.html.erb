<div class="container">
    <div class="row">
        <div class="col-md-12">
           
             <p>
                <%= form_for(@detail, :html => {class: "form-horizontal", role: "form"}) do |f| %>
              
               <div class="form-group">
                 <div class="control-label col-md-2">
                    <%= f.label :name, class: "white" %> 
                 </div>
                 <div class="col-md-8">
                   <%= f.text_field :name, class: 'form-control', placeholder: "Name", autofocus: true %>
                 </div>
               </div>
               
               <div class="form-group">
                 <div class="control-label col-md-2">
                    <%= f.label :picture, class: "white" %> 
                 </div>
                 <div class="col-md-8">
                   <%= f.file_field :picture, id: "detail_picture", class: 'form-control', placeholder: "Add an image of yourself", autofocus: true %>
                 </div>
               </div>
    
               <div class="form-group">
                 <div class="control-label col-md-2">
                    <%= f.label :description, class: "white" %> 
                 </div>
                 <div class="col-md-8">
                   <%= f.text_area :description, class: 'form-control', placeholder: "Add description of here", autofocus: true %>
                 </div>
               </div>
              
              
              <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                  <%= f.submit class: "btn btn-primary" %> 
                  <%= link_to "Back to Index", details_path, class: "btn btn-warning" %>
                </div>
              </div>
            
            <% end %>
         </p>
           
        </div>
    </div>
</div>

