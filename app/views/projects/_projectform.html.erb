<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="well">
                <p>
                    <%= form_for @project do |f| %>
    
                    <p>
                        <%= f.label :company %> <br />
                        <%= f.text_field :company %>
                    </p>
                    
                    <p>
                        <%= f.label :title %> <br />
                        <%= f.text_field :title %>
                    </p>
                    
                     <p>
                        <%= f.label :description %> <br />
                        <%= f.text_area :description %>
                    </p>
                    
                    <p>
                        <%= f.submit %>
                    </p>
                    
                <% end %>
                </p>
            </div>
        </div>
    </div>
</div>