<%= render "projects/projecterrors" %>
<h2 align="center">New Project</h2>

    <%= form_for @project do |f| %>
    
    <p>
        <%= f.label :company %> <br />
        <%= f.text_field :company %>
    </p>
    
    <p>
        <%= f.label :title %> <br />
        <%= f.text_field :title %>
    </p>
    
     <p>
        <%= f.label :description %> <br />
        <%= f.text_area :description %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
    
    
    <% end %>