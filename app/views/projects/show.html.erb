<div class="container">
    <div class="well blue white">
      <h2 align="center" class="title-header"><%= @project.company %></h2>

    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        
          
          <p align="center">
            Responsibility: <%= @project.title %>
          </p>
          <br />
          
          <p>
            Project: <%= @project.description %>
          </p>
          <br />
          <p align="center">
            <%= link_to "Edit Project", edit_project_path(@project), class: "btn btn-primary" %>
            <%= link_to "All Projects", projects_path, class: "btn btn-warning" %>
            <%= link_to "Delete Project", project_path(@project), method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </p>
        
      </div>
    </div>
    </div>
</div>
